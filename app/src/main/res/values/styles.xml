<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="etConnexion">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">#11000000</item>
        <item name="android:textColor">#000</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
    </style>
    <style name="etRemplir">
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="buttonOval">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/oval</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textColorHint">@color/cardview_light_background</item>
    </style>
    <style name="buttonTransparent">
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TitlePopup">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp </item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="borderPopup">

        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_width">0dp </item>
        <item name="android:layout_height">1dp </item>
        <item name="android:background">@android:color/black</item>

    </style>

    <style name="phoneButton">


        <item name="android:layout_width">wrap_content </item>
        <item name="android:layout_height">wrap_content </item>
        <item name="android:background">@android:color/black</item>

    </style>



</resources>
