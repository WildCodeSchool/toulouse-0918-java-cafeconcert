<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="etConnexion">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">#11000000</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
    </style>
    <style name="etRemplir">
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textColorHint">@color/cardview_light_background</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="buttonOval">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/oval</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textColorHint">@color/cardview_light_background</item>
    </style>
    <style name="buttonTransparent">
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>

    </style>

</resources>
